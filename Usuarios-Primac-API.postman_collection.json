		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extrae y guarda el token JWT de las respuestas de login/register",
					"if (pm.response.code === 200 || pm.response.code === 201) {",
					"    try {",
					"        const jsonResponse = pm.response.json();",
					"        if (jsonResponse && jsonResponse.token) {",
					"            pm.environment.set(\"token\", jsonResponse.token);",
					"            console.log(\"✅ Token JWT guardado automáticamente en el entorno\");",
					"        }",
					"        if (jsonResponse && jsonResponse.id) {",
					"            pm.environment.set(\"current_user_id\", jsonResponse.id);",
					"            console.log(\"✅ ID de usuario guardado automáticamente\");",
					"        }",
					"    } catch (e) {",
					"        console.log(\"ℹ️ Respuesta no contiene JSON válido\");",
					"    }",
					"}"
				]
			}
		}
